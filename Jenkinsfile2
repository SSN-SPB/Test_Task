pipeline {
  agent any
  stages {
    stage('Build') {
      steps {
        echo "building"
        sleep 10
      }
    }
    stage('Test') {
    steps {
echo 'Checking Python version...'
                    if (isUnix()) {
                       echo 'Checking Python Linux version...'
                        sh 'python3 --version || python --version'
                    } else {
                        echo 'Checking Python Windows version...'
                        bat 'python --version'
                    }
    }
    }
  }
}
